  <TABLES>

    <TABLE NAME="local_obu_course" COMMENT="OBU HLS courses">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="code" TYPE="char" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="The course code"/>
        <FIELD NAME="name" TYPE="char" LENGTH="100" NOTNULL="true" SEQUENCE="false" COMMENT="The name of the course"/>
        <FIELD NAME="applicant_form" TYPE="char" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="Any supplementary form for the applicant"/>
        <FIELD NAME="manager_form" TYPE="char" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="Any supplementary form for the manager"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="code" UNIQUE="true" FIELDS="code" COMMENT="The course code"/>
      </INDEXES>
    </TABLE>
	
    <TABLE NAME="local_obu_form" COMMENT="OBU HLS forms">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="form_id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="The form's ID"/>
        <FIELD NAME="version" TYPE="char" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="The form's version"/>
        <FIELD NAME="author" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="The authors's Moodle user ID"/>
        <FIELD NAME="date" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Date of form update"/>
        <FIELD NAME="notes" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Completion notes"/>
        <FIELD NAME="published" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Draft or Published"/>
        <FIELD NAME="data" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="The form's template"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="form" UNIQUE="true" FIELDS="form_id, version" COMMENT="The form's ID/version"/>
      </INDEXES>
    </TABLE>

    <TABLE NAME="local_obu_organisation" COMMENT="OBU HLS organisations">
