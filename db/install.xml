      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="supplement" UNIQUE="true" FIELDS="ref, version" COMMENT="The supplement's reference/version"/>
      </INDEXES>
    </TABLE>

